%h1=t('user.login')
=form_tag sessions_path, {:class => 'form-stacked'} do
  %p
    =label_tag :email, t('activerecord.attributes.user.email')
    =text_field_tag :email
  %p
    =label_tag :password, t('activerecord.attributes.user.password')
    =password_field_tag :password
  %p
    =submit_tag t('user.login'), {:class => "btn"}