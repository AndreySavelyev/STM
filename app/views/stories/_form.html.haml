=form_for @story do |f|
  =f.label :title
  %br/
  =f.text_field :title
  %br/
  =f.label :description
  %br/
  =f.text_area :description
  %br/
  =f.label :user_id
  %br/
  =f.select :user_id, options_from_collection_for_select(@users, "id", "email"), :include_blank => true
  %br/
  %br/
  =f.submit
  
=link_to "Back to stories", stories_path